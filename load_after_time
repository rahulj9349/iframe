<body>

  <!-- Page Content (Hidden initially) -->
  <div id="page-content">
    <h1>Welcome to the Swiper Banner Page</h1>

    <!-- Swiper -->
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide"><img src="https://www.freedeem.in/api/public/storage/dealimage/website/website_url_62bea01162fac_1656659985.jpg" alt="Slide 1" /></div>
        <div class="swiper-slide"><img src="https://www.freedeem.in/api/public/storage/dealimage/website/website_groupoffer_68247386dbf0f_1747219334.jpg" alt="Slide 2" /></div>
        <div class="swiper-slide"><img src="https://www.freedeem.in/api/public/storage/dealimage/website/website_groupoffer_6482cce68838e_1686293734.jpg" alt="Slide 3" /></div>
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </div>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Delay page content display by 2 seconds -->
  <script>
    window.addEventListener('load', function () {
      setTimeout(() => {
        document.getElementById('page-content').style.display = 'block';

        // Initialize Swiper
        new Swiper(".mySwiper", {
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
          },
          autoplay: {
            delay: 3000,
          },
          loop: true,
        });
      }, 2000);
    });
  </script>
